---
import Layout from '../layouts/Layout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import '../styles/home.css';
import {
	navigation,
	heroContent,
	aboutSection,
	coreStrengths,
	coursesOverview,
	adultCourses,
	childrenSection,
	clients,
	partnersIntro,
	successStories,
	testimonials,
	missionSection,
	partnershipSection,
	contactSection
} from '../data/site-content';
---

<Layout
	title="Mandalion Education | Professional Mandarin Courses for Global Learners"
	description="Mandalion Education delivers research-backed Mandarin programs, personalized learning plans, and flexible online or in-person courses for learners worldwide."
>
	<SiteHeader
		navigation={navigation}
		brandName="Mandalion Education"
		tagline="Empowering language learning, bridging the world."
	/>

	<main>
		<HeroSection
			title={heroContent.title}
			description={heroContent.description}
			primaryCta={heroContent.primaryCta}
			secondaryCta={heroContent.secondaryCta}
		/>

		<section id="about" class="section-padding">
			<div class="container">
				<div class="row g-4 align-items-stretch">
					<div class="col-lg-7">
						<h2 class="section-title overflow-anywhere">{aboutSection.heading}</h2>
						<p class="section-description overflow-anywhere">{aboutSection.body}</p>
					</div>
					<div class="col-lg-5">
						<div class="card card-elevated h-100">
							<div class="card-body">
								<h3 class="h5 fw-bold overflow-anywhere">{aboutSection.cardTitle}</h3>
								<p class="text-muted-custom overflow-anywhere">{aboutSection.cardBody}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="core-strengths" class="section-padding bg-white">
			<div class="container">
				<div class="text-center mb-4">
					<h2 class="section-title overflow-anywhere">Core Strengths</h2>
					<p class="section-description mx-auto overflow-anywhere">
						Professional learning experiences that blend expert instruction, tailored pathways, and modern technology.
					</p>
				</div>
				<div class="row g-4">
					{coreStrengths.map((item) => (
						<div class="col-md-6 col-lg-4">
							<div class="card card-elevated card-outline h-100">
								<div class="card-body d-flex flex-column gap-2 overflow-anywhere">
									<h3 class="h5 fw-semibold overflow-anywhere">{item.title}</h3>
									<p class="text-muted-custom overflow-anywhere">{item.description}</p>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<section id="courses" class="section-padding">
			<div class="container">
				<div class="row g-4 align-items-stretch">
					<div class="col-lg-7 d-flex flex-column gap-3">
						<h2 class="section-title overflow-anywhere">{coursesOverview.heading}</h2>
						<p class="section-description overflow-anywhere">{coursesOverview.body}</p>
					</div>
					<div class="col-lg-5">
						<div class="card card-elevated card-outline h-100">
							<div class="card-body d-flex flex-column gap-3">
								{coursesOverview.highlights.map((highlight) => (
									<div>
										<strong class="d-block overflow-anywhere">{highlight.title}</strong>
										<p class="text-muted-custom overflow-anywhere">{highlight.detail}</p>
									</div>
								))}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="adult-courses" class="section-padding bg-white">
			<div class="container">
				<div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-end gap-3 mb-4">
					<div>
						<h2 class="section-title overflow-anywhere">Courses for Adults</h2>
						<p class="section-description overflow-anywhere">
							Flexible pathways for beginners to advanced professionals, centered on real-world communication.
						</p>
					</div>
					<span class="stat-badge">Structured | Practical | Immersive</span>
				</div>
				<div class="row g-4">
					{adultCourses.map((course) => (
						<div class="col-md-6">
							<article class="card card-elevated h-100">
								<div class="card-body d-flex flex-column gap-3 overflow-anywhere">
									<header>
										<h3 class="h5 fw-semibold overflow-anywhere">{course.name}</h3>
										<p class="text-muted-custom overflow-anywhere">{course.description}</p>
									</header>
									<ul class="mb-0 overflow-anywhere">
										{course.highlights.map((highlight) => (
											<li class="mb-2 overflow-anywhere">{highlight}</li>
										))}
									</ul>
								</div>
							</article>
						</div>
					))}
				</div>
			</div>
		</section>

		<section id="children" class="section-padding">
			<div class="container">
				<div class="row g-4 align-items-stretch">
					<div class="col-lg-7">
						<h2 class="section-title overflow-anywhere">{childrenSection.heading}</h2>
						<p class="section-description overflow-anywhere">{childrenSection.body}</p>
					</div>
					<div class="col-lg-5">
						<div class="card card-elevated h-100">
							<div class="card-body">
								<ul class="mb-0 overflow-anywhere">
									{childrenSection.highlights.map((highlight) => (
										<li class="mb-3 overflow-anywhere">{highlight}</li>
									))}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="partners" class="section-padding bg-white">
			<div class="container">
				<div class="text-center mb-5">
					<h2 class="section-title overflow-anywhere">Institutions &amp; Enterprises That Trust Us</h2>
					<p class="section-description mx-auto overflow-anywhere">{partnersIntro}</p>
				</div>
				<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3 trusted-grid">
					{clients.map((client) => (
						<div class="col">
							<div class="card card-outline h-100 d-flex align-items-center justify-content-center text-center py-4 px-3 overflow-anywhere">
								<span class="fw-semibold overflow-anywhere">{client}</span>
							</div>
						</div>
					))}
					<div class="col">
						<div class="card card-outline h-100 d-flex align-items-center justify-content-center text-center py-4 px-3 overflow-anywhere">
							<span class="fw-semibold overflow-anywhere">...and many more worldwide partners.</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="success" class="section-padding">
			<div class="container">
				<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3 mb-4">
					<h2 class="section-title overflow-anywhere">Students’ Success Stories</h2>
					<span class="badge-soft">Real results across industries &amp; stages</span>
				</div>
				<div class="row g-4">
					{successStories.map((story) => (
						<div class="col-md-4">
							<div class="card card-elevated h-100 success-card">
								<div class="card-body overflow-anywhere">
									<strong class="overflow-anywhere">{story.name}</strong>
									<p class="text-muted-custom overflow-anywhere mb-0">{story.detail}</p>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<section id="testimonials" class="section-padding bg-white">
			<div class="container">
				<div class="text-center mb-5">
					<h2 class="section-title overflow-anywhere">Student Testimonials</h2>
					<p class="section-description mx-auto overflow-anywhere">
						Voices from professionals, parents, and learners who experienced the Mandalion approach.
					</p>
				</div>
				<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
					{testimonials.map((testimonial) => (
						<div class="col">
							<figure class="card card-elevated h-100 testimonial-card p-4 overflow-anywhere">
								<blockquote class="overflow-anywhere">“{testimonial.quote}”</blockquote>
								<figcaption class="d-flex flex-column gap-1 overflow-anywhere">
									<strong class="overflow-anywhere">{testimonial.name}</strong>
									<span class="overflow-anywhere">{testimonial.role}</span>
								</figcaption>
							</figure>
						</div>
					))}
				</div>
			</div>
		</section>

		<section id="mission" class="section-padding">
			<div class="container">
				<div class="row g-4 align-items-stretch">
					<div class="col-lg-7">
						<h2 class="section-title overflow-anywhere">{missionSection.heading}</h2>
						<p class="section-description overflow-anywhere">{missionSection.body}</p>
					</div>
					<div class="col-lg-5">
						<div class="card card-elevated h-100 partner-highlight">
							<div class="card-body overflow-anywhere">
								<h3 class="h5 fw-semibold overflow-anywhere">{missionSection.cardTitle}</h3>
								<p class="text-muted-custom overflow-anywhere mb-0">{missionSection.cardBody}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="partnerships" class="section-padding bg-white">
			<div class="container">
				<div class="row g-4 align-items-stretch">
					<div class="col-lg-6">
						<h2 class="section-title overflow-anywhere">{partnershipSection.heading}</h2>
						<p class="section-description overflow-anywhere">{partnershipSection.body}</p>
					</div>
					<div class="col-lg-6">
						<div class="card card-elevated h-100">
							<div class="card-body">
								<ul class="mb-0 overflow-anywhere">
									{partnershipSection.highlights.map((highlight) => (
										<li class="mb-3 overflow-anywhere">{highlight}</li>
									))}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="contact" class="section-padding bg-soft">
			<div class="container">
				<div class="row g-4 align-items-stretch">
					<div class="col-lg-6">
						<h2 class="section-title overflow-anywhere">{contactSection.heading}</h2>
						<p class="section-description overflow-anywhere">{contactSection.body}</p>
					</div>
					<div class="col-lg-6">
						<div class="card card-elevated h-100 contact-card">
							<div class="card-body d-flex flex-column gap-3">
								<div class="d-grid gap-3">
									{contactSection.details.map((detail) => (
										<div>
											<p class="mb-1 fw-semibold overflow-anywhere">{detail.term}</p>
											<p class="mb-0 text-muted-custom overflow-anywhere">{detail.detail}</p>
										</div>
									))}
								</div>
								<p class="mb-0 text-muted-custom">
									Follow our updates to be the first to know when the Mandalion app launches with more AI-powered tools.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<footer class="bg-dark text-white py-4">
		<div class="container d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
			<p class="mb-0">&copy; {new Date().getFullYear()} Mandalion Education. All rights reserved.</p>
			<div class="d-flex gap-3">
				<a class="footer-link" href="#contact">Contact</a>
			</div>
		</div>
	</footer>
</Layout>
