---
import type { NavigationItem } from '../data/site-content';
import '../styles/components/header.css';

interface Props {
	navigation: NavigationItem[];
	brandName: string;
	tagline: string;
}

const { navigation, brandName, tagline } = Astro.props as Props;
---

<header class="site-header bg-white shadow-sm sticky-top" id="top">
	<div class="container d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 py-3">
		<div class="d-flex align-items-center gap-3">
			<img class="brand-mark" src="/favicon.png" alt="Mandalion Education logo" width="48" height="48" />
			<div>
				<p class="brand-name mb-1">{brandName}</p>
				<p class="brand-tagline">{tagline}</p>
			</div>
		</div>
		<nav aria-label="Primary navigation">
			<ul class="list-unstyled d-flex align-items-center flex-wrap mb-0">
				{navigation.map((item) => (
					<li><a href={item.href}>{item.label}</a></li>
				))}
			</ul>
		</nav>
	</div>
</header>
